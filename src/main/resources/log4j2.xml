<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{yyyy-MMM-dd HH:mm:ss a} %-5level %logger{36} - %msg%n" />
		<!-- Use [%t] for thread naming -->
    </Console>
	
	<!-- File Appender
    <File name="File" fileName="c:/log/app.log">
      <PatternLayout
        pattern="%d{yyyy-MMM-dd HH:mm:ss a} %-5level %logger{36} - %msg%n" />
    </File>
	-->
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
	  <!-- <AppenderRef ref="File" /> -->
    </Root>
  </Loggers>
</Configuration>